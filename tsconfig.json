{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "incremental": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "esModuleInterop": true ,
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "esnext",
  },
  "include": ["src/**/*"],
}
